{% extends "CoreBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <div class="container">
        <div class="card-panel">
            <div class="row">
                <div class="input-field col s12 center">
                    <img src="http://www.ip-watch.org/weblog/wp-content/uploads/2015/03/design-image.jpg" alt="circle" class="circle responsive-img valign profile-image-login" style="width: 120px;height: 120px;">
                    <p class="center login-form-text">Wall Design</p>
                </div>
                <form action="{{ path("fos_user_security_check") }}" method="post">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" />
                    <div class="col s12">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>

                    <div class="col s12 button-top">
                        <input  class="btn waves-effect waves-light" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>

                </form>
            </div>
        </div>

        <p>{{ "Pas encore inscrit?" | trans }} <a href="{{ path('fos_user_registration_register') }}"> {{ "inscrire" |trans }}</a></p>
    </div>





{% endblock fos_user_content %}