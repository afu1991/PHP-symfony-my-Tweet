{% extends "CoreBundle::layout.html.twig" %}

{% block title %}CoreBundle:Twitter:index{% endblock %}

{% block body %}
  <div class="container" style="margin-top: 10px">
      <div id="profile-page-wall-share" class="row">
          <div class="col s12">
              <ul class="tabs tab-profile z-depth-1 light-blue" style="width: 100%;">
                  <li class="tab col s3"><a class="white-text waves-effect waves-light active" href="#UpdateStatus"><i class="mdi-editor-border-color"></i> {{ "Recherche" | trans }}</a>
                  </li>


              </ul>

              <form id="UpdateStatus" class="tab-content col s12  grey lighten-4" method="post">
                  <div class="row">
                      <div class="col s2">

                          <img src="http://www.couverture-fb.com/wp-content/uploads/2012/04/couverture-facebook-doigts.jpg" alt="" class="circle responsive-img valign profile-image-post">
                      </div>
                      <div class="input-field col s10">
                          <textarea id="text-content" class="materialize-textarea" name="text"></textarea>
                          <label for="text-content" class="">{{ "Recherche" | trans }}</label>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col s12 m6 share-icons">
                          <input name="group1" type="radio" id="test1" name="type" value="#" />
                          <label for="test1">#Hashtag</label>
                          <input name="group1" type="radio" id="test2" name="type" value="@"/>
                          <label for="test2">@compte</label>
                          <input name="group1" type="radio" id="test3" name="type" value="" />
                          <label for="test3">Mot cl√©</label>
                      </div>
                      <div class="col s12 m6 right-align">
                          <!-- Dropdown Trigger -->

                          <button class="btn waves-effect waves-light" type="submit" name="action">
                              <i class="mdi-maps-rate-review left"></i>{{ "Recherche" | trans }}
                          </button>


                      </div>
                  </div>
              </form>

              {% if tweets %}

                  {% for tweet in tweets.statuses %}

                      <div class="row">
                          <div class="col s12 m8 offset-m2 l6 offset-l3">
                              <div class="card-panel grey lighten-5 z-depth-1">
                                  <div class="row valign-wrapper">
                                      <div class="col s2">
                                          <img src="{{ tweet.user.profile_image_url_https | replace }}" alt="" class="circle responsive-img height-img"> <!-- notice the "circle" class -->

                                          <a href="https://twitter.com/{{ tweet.user.screen_name }}">
                                              @{{ tweet.user.screen_name }}
                                          </a>

                                      </div>
                                      <div class="col s10">
                                          <span class="black-text">
                                            {{ tweet.text | parse }}
                                          </span>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </div>
                  {% endfor %}
              {% endif %}
          </div>
      </div>
  </div>
{% endblock %}
